{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "check-types": "tsc --pretty --noEmit",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint src/**/*.css --fix",
    "lint:prettier": "prettier --check '**/*.md' --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:prettier && next lint",
    "format": "prettier --write ."
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@bem-react/classname": "^1.6.0",
    "@gravity-ui/icons": "^2.13.0",
    "@gravity-ui/navigation": "^3.3.4",
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.9.0",
    "@prisma/extension-accelerate": "^2.0.1",
    "axios": "^1.9.0",
    "bem-cn-lite": "^4.1.0",
    "i18next": "^25.0.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-http-backend": "^3.0.2",
    "next": "15.3.1",
    "nodemailer": "^7.0.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.2",
    "react-i18next": "^15.5.1",
    "react-toastify": "^11.0.5",
    "server-only": "^0.0.1",
    "zod": "^3.24.3",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@gravity-ui/browserslist-config": "^4.3.0",
    "@gravity-ui/components": "^4.1.2",
    "@gravity-ui/uikit": "^7.10.0",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.17.32",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "cypress": "^14.3.2",
    "eslint": "^9.26.0",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.3.1",
    "husky": "^8.0.3",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "stylelint": "^16.19.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "extends @gravity-ui/browserslist-config"
  ],
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
