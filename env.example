# ==============================================
# PORTFOLIO APPLICATION ENVIRONMENT VARIABLES
# ==============================================

# Application Settings
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Next.js Settings
NEXT_TELEMETRY_DISABLED=1
NEXTAUTH_URL=https://nkolosov.com
NEXTAUTH_SECRET=your-super-secret-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://portfolio_user:portfolio_password@postgres:5432/portfolio
POSTGRES_DB=portfolio
POSTGRES_USER=portfolio_user
POSTGRES_PASSWORD=portfolio_password
POSTGRES_PORT=5432

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@nkolosov.com

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=https://nkolosov.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Docker Compose Ports
APP_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
ADMINER_PORT=8080

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# S3 Configuration (для будущего использования)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_UPLOADS=nkolosov-portfolio-uploads
# S3_BUCKET_BACKUPS=nkolosov-portfolio-backups

# Monitoring Configuration (опционально)
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3001
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=secure-password

# Development Only
ADMINER_PORT=8080
